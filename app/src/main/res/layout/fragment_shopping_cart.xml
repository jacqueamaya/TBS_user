<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="citu.teknoybuyandselluser.fragments.ShoppingCartFragment"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_gravity="center_vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:width="100dp"
                android:text="Item"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="bold"/>
            <TextView
                android:width="80dp"
                android:text="Quantity"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:width="80dp"
                android:text="Price"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:width="80dp"
                android:text="Action"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="bold"
                android:gravity="center"/>
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal" />
        <TableRow>
            <TextView
                android:width="100dp"
                android:text="Rizal Book"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"/>
            <TextView
                android:width="80dp"
                android:text="1"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"
                android:gravity="center"/>
            <TextView
                android:width="80dp"
                android:text="100"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"
                android:gravity="center"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Cancel"
                android:id="@+id/btnCancel1"
                android:layout_column="3"
                android:background="@color/Louie"
                android:textColor="@color/White"/>
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />
        <TableRow>
            <TextView
                android:width="100dp"
                android:text="PE Uniform"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"/>
            <TextView
                android:width="80dp"
                android:text="2"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"
                android:gravity="center"/>
            <TextView
                android:width="80dp"
                android:text="200"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"
                android:gravity="center"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Cancel"
                android:id="@+id/btnCancel2"
                android:layout_column="3"
                android:background="@color/Louie"
                android:textColor="@color/White"/>
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />
        <TableRow>
            <TextView
                android:width="100dp"
                android:text="English Book"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"/>
            <TextView
                android:width="80dp"
                android:text="1"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"
                android:gravity="center"/>
            <TextView
                android:width="80dp"
                android:text="150"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:padding="3dip"
                android:textStyle="normal"
                android:gravity="center"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Cancel"
                android:id="@+id/btnCancel3"
                android:layout_column="3"
                android:background="@color/Louie"
                android:textColor="@color/White"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:layout_gravity="center"
            android:textColor="@color/Black"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>



