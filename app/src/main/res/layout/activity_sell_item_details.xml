<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- The ActionBar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- The main content view -->
        <RelativeLayout
            android:id="@+id/flContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/thumbsq_24dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="140dp">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                <ImageView
                    android:id="@+id/shoppingcart"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@+id/preview"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/shop_24dp"
                    android:tint="@color/Louie" />

                <TextView
                    android:id="@+id/txtItem"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/preview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/shoppingcart"
                    android:text="Item"
                    android:textColor="@color/Black"
                    android:textSize="18sp"
                    android:background="@drawable/textbox"
                    android:padding="10dp"
                    android:enabled="false"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                <ImageView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/shoppingcart"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit_24dp"
                    android:tint="@color/Louie" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtItem"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/description"
                    android:text="Description"
                    android:textColorHint="@color/Black"
                    android:textColor="@color/Black"
                    android:textSize="18sp"
                    android:background="@drawable/textbox"
                    android:padding="10dp"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="5"
                    android:gravity="top"
                    android:enabled="false"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >
                <ImageView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/description"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/money_24dp"
                    android:tint="@color/Louie" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDescription"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/price"
                    android:text="Price"
                    android:textColorHint="@color/Black"
                    android:textColor="@color/Black"
                    android:textSize="18sp"
                    android:background="@drawable/textbox"
                    android:padding="10dp"
                    android:enabled="false"/>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >
                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/price"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/input_status_small"
                        android:tint="@color/Louie" />

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtPrice"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/status"
                        android:text="Status"
                        android:textColorHint="@color/Black"
                        android:textColor="@color/Black"
                        android:textSize="18sp"
                        android:background="@drawable/textbox"
                        android:padding="10dp"
                        android:enabled="false"/>

                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/LightYellow"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>
