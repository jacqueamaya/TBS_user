<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/Louie"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="citu.teknoybuyandselluser.fragments.BuyItemFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/rizal_book" />

            <TextView
                android:id="@+id/txtItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/imgItem"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItem"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/imgItem"
                android:textColor="@color/Gray"
                android:textSize="20dp"
                android:textStyle="normal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="@string/without_discount"
                android:id="@+id/rdo1"
                android:layout_toRightOf="@+id/imgItem"
                android:layout_below="@+id/txtPrice"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/with_discount"
                android:id="@+id/rdo2"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/rdo1"
                android:layout_toRightOf="@id/imgItem"/>

            <TextView
                android:id="@+id/lblDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgItem"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:text="@string/item_details"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblDetails"
                android:layout_marginTop="10dp"
                android:textColor="@color/Gray"
                android:textSize="16dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/btnBuyItem"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="140dp"
                android:layout_below="@+id/txtDescription"
                android:src="@drawable/buy_this" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

