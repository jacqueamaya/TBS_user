<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:id="@+id/flContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:id="@+id/framePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/profpic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        app:placeholderImage="@drawable/input_user"
                        app:roundAsCircle="true" />

                    <ProgressBar
                        android:id="@+id/progressUpload"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/framePicture"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/user_name"
                    android:src="@drawable/user_24dp"
                    android:tint="@color/Louie" />

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/framePicture"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/username"
                    android:layout_toRightOf="@id/username"
                    android:background="@drawable/textbox"
                    android:padding="10dp"
                    android:text="@string/user_name"
                    android:textColorHint="@color/SlateGray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/new_username"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/username"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/new_username"
                    android:src="@drawable/newuser_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputNewUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUsername"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/new_username"
                    android:layout_toRightOf="@id/new_username"
                    android:background="@drawable/textbox"
                    android:hint="@string/new_username"
                    android:inputType="textCapSentences"
                    android:padding="10dp"
                    android:textColorHint="@color/SlateGray" />

                <ImageView
                    android:id="@+id/currentPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/new_username"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/current_password"
                    android:src="@drawable/currentpass_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputNewUsername"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/currentPassword"
                    android:layout_toRightOf="@id/currentPassword"
                    android:background="@drawable/textbox"
                    android:fontFamily="Calibri"
                    android:hint="@string/current_password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="@color/SlateGray" />

                <ImageView
                    android:id="@+id/newPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/currentPassword"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/new_password"
                    android:src="@drawable/newpass_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputCurrentPassword"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/newPassword"
                    android:layout_toRightOf="@id/newPassword"
                    android:background="@drawable/textbox"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="@color/SlateGray" />

                <ImageView
                    android:id="@+id/confirmPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/newPassword"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/confirm_password"
                    android:src="@drawable/confirmpass_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputNewPassword"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/confirmPassword"
                    android:layout_toRightOf="@id/confirmPassword"
                    android:background="@drawable/textbox"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColorHint="@color/SlateGray" />

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/confirmPassword"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/photo"
                    android:src="@drawable/img_24dp"
                    android:tint="@color/Louie" />

                <TextView
                    android:id="@+id/txtPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputConfirmPassword"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/photo"
                    android:layout_toRightOf="@id/photo"
                    android:text="@string/photo"
                    android:textColor="@color/Black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnBrowse"
                    android:layout_width="220dp"
                    android:layout_height="33dp"
                    android:layout_below="@id/inputConfirmPassword"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/txtPicture"
                    android:layout_toRightOf="@id/txtPicture"
                    android:background="@drawable/roundedbutton"
                    android:text="@string/browse"
                    android:textColor="@color/White"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/btnBrowse"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnSellItem"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/positivebutton"
                        android:onClick="onEditProfile"
                        android:src="@drawable/button_sell"
                        android:text="@string/edit_profile"
                        android:textColor="@color/White" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/LightYellow"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />
</android.support.v4.widget.DrawerLayout>

