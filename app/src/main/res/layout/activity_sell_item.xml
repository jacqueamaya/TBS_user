<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffe0"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- The ActionBar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/toolbar">

            <!-- The main content view -->
            <RelativeLayout
                android:id="@+id/flContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <EditText
                    android:id="@+id/inputItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbox"
                    android:paddingLeft="15dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/GreyDark"
                    android:textColorHint="#73000000"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:hint="Item"
                    android:inputType="textCapSentences"
                    android:drawableLeft="@drawable/ic_cursor_maroon"
                    android:drawablePadding="8dp" />


                <EditText
                    android:id="@+id/inputDescription"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:background="@drawable/textbox"
                    android:gravity="top"
                    android:paddingLeft="15dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputItem"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:isScrollContainer="true"
                    android:scrollbars="vertical"
                    android:maxLines="5"
                    android:lines="3"
                    android:textSize="14dp"
                    android:textColor="@color/GreyDark"
                    android:textColorHint="#73000000"
                    android:drawableLeft="@drawable/ic_clipboard_maroon"
                    android:drawablePadding="8dp"/>

                    <EditText
                        android:id="@+id/inputPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbox"
                        android:paddingLeft="16dp"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/GreyDark"
                        android:textColorHint="#73000000"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/inputDescription"
                        android:layout_toRightOf="@id/price"
                        android:hint="Price"
                        android:inputType="numberDecimal"
                        android:drawableLeft="@drawable/ic_cash_maroon"
                        android:drawablePadding="8dp"/>

                    <EditText
                        android:id="@+id/inputQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbox"
                        android:paddingLeft="15dp"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/GreyDark"
                        android:textColorHint="#73000000"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/inputPrice"
                        android:layout_toRightOf="@id/quantity"
                        android:hint="Quantity"
                        android:inputType="numberDecimal"
                        android:drawableLeft="@drawable/ic_tag_maroon"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/txtPicture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/inputQuantity"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Photo"
                        android:textColor="@color/GreyDark"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/btnBrowse"
                        android:layout_width="220dp"
                        android:layout_height="33dp"
                        android:layout_below="@id/inputQuantity"
                        android:layout_gravity="left"
                        android:layout_toRightOf="@id/txtPicture"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/positivebutton"
                        android:text="Browse"
                        android:textColor="@color/White"
                        android:textSize="14dp"/>

                    <Space
                        android:id="@+id/space"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="325dp"
                        android:layout_below="@id/btnBrowse"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/preview"
                            android:layout_width="match_parent"
                            android:layout_height="325dp"
                            android:layout_marginTop="10dp"
                            app:placeholderImage="@drawable/thumbsq_24dp"/>

                        <ProgressBar
                            android:id="@+id/progressUpload"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/frameLayout"
                        android:gravity="center|bottom"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <Button
                            android:id="@+id/btnSellItem"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/positivebutton"
                            android:onClick="onSell"
                            android:src="@drawable/button_sell"
                            android:text="Sell Item"
                            android:textColor="@color/White" />
                    </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/LightYellow"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>

