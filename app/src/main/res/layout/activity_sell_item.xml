<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- The ActionBar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- The main content view -->
        <RelativeLayout
            android:id="@+id/flContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shoppingcart"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/shop_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputItem"
                    android:hint="Item"
                    android:inputType="textCapSentences"
                    android:background="@drawable/textbox"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/shoppingcart"
                    android:textColorHint="@color/SlateGray"/>

                <ImageView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/shoppingcart"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/edit_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputDescription"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:background="@drawable/textbox"
                    android:gravity="top"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputItem"
                    android:layout_toRightOf="@+id/description"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:isScrollContainer="true"
                    android:scrollbars="vertical"
                    android:maxLines="5"
                    android:lines="3"
                    android:textColorHint="@color/SlateGray" />

                <ImageView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/description"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/money_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputDescription"
                    android:background="@drawable/textbox"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/price"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/SlateGray" />

                <ImageView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/price"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/money_24dp"
                    android:tint="@color/Louie" />

                <EditText
                    android:id="@+id/inputQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputPrice"
                    android:background="@drawable/textbox"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/quantity"
                    android:hint="Quantity"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/SlateGray" />

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/quantity"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/thumb_24dp"
                    android:tint="@color/Louie" />

                <TextView
                    android:id="@+id/txtPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputQuantity"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/picture"
                    android:text="Photo"
                    android:textColor="@color/Black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnBrowse"
                    android:layout_width="220dp"
                    android:layout_height="33dp"
                    android:layout_below="@id/inputQuantity"
                    android:layout_gravity="left"
                    android:layout_toRightOf="@id/txtPicture"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/roundedbutton"
                    android:text="Browse"
                    android:textColor="@color/White"
                    android:textSize="16dp"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/picture"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:id="@+id/preview"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/thumbsq_24dp" />

                    <ProgressBar
                        android:id="@+id/progressUpload"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center_horizontal"
                        android:indeterminate="true" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/frameLayout"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <Button
                        android:id="@+id/btnSellItem"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/positivebutton"
                        android:onClick="onSell"
                        android:src="@drawable/button_sell"
                        android:text="Sell Item"
                        android:textColor="@color/White" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/LightYellow"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>

